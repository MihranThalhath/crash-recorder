<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="crash_recorder.recording_notice" owl="1">
        <div class="o_mail_systray_item dropdown">
            <a class="dropdown-toggle o-no-caret o-dropdown--narrow"
                data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false"
                title="Crash Recording" href="#" role="button">
                <i class="fa fa-video-camera" role="img" aria-label="Crash Recording" />
            </a>
            <div
                class="crash_recording_systray_dropdown dropdown-menu dropdown-menu-right"
                role="menu">
                <span>
                    <p>Actions leading up to a crash are recorded and reported to the
                        administrator.</p>
                    <p>This consists of a 30 second to 3 minutes recording of Odoo,
                        prior to which the error occurs. It does not include any webcam
                        or sound recordings.</p>
                </span>
            </div>
        </div>
    </t>

</templates>
