<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="assets_common" inherit_id="web.assets_common">
        <xpath expr="." position="inside">
            <script type="text/javascript"
                src="/crash_recorder/static/lib/rrweb/js/rrweb-all.min.js"></script>
            <script type="text/javascript" src="/crash_recorder/static/src/js/rrweb.js"></script>
        </xpath>
    </template>

    <template id="assets_backend" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/css"
                href="/crash_recorder/static/lib/rrweb/css/style.min.css" />
            <link rel="stylesheet" type="text/scss"
                href="/crash_recorder/static/src/scss/crash_recorder_systray.scss" />
            <script type="text/javascript"
                src="/crash_recorder/static/lib/rrweb/js/index.min.js"></script>
            <script type="text/javascript"
                src="/crash_recorder/static/src/js/rrweb_field.js"></script>
            <script type="text/javascript"
                src="/crash_recorder/static/src/js/rrweb_systray.js"></script>
        </xpath>
    </template>
</odoo>
